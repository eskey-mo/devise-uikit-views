<%= uikit_devise_error_messages! %>
<div class="uk-height-1-1 uk-devise-views">
  <div class="uk-vertical-align uk-text-center uk-height-1-1">
    <div class="uk-vertical-align-middle">
      <div class="uk-panel uk-panel-box uk-form">
        <h1><%= t('.change_your_password', :default => 'Change your password') %></h1>
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, role: "form" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="uk-form-row uk-form-icon uk-text-left">
          <i class="uk-icon-key"></i>
          <%= f.password_field :password, autofocus: true, class: "uk-width-1-1 uk-form-large uk-form-width-large", placeholder: t('devise.passwords.edit.new_password', :default => 'New Password') %>
        </div>
        <div class="uk-form-row uk-form-icon uk-text-left">
          <i class="uk-icon-key"></i>
          <%= f.password_field :password_confirmation, class: "uk-width-1-1 uk-form-large uk-form-width-large", placeholder: t('devise.passwords.edit.confirm_new_password', :default => 'New Password Confirm' %>
        </div>
        <div class="uk-form-row">
          <%= f.button t('.change_my_password', :default => 'Change my password'), class: 'uk-width-1-1 uk-button uk-button-primary uk-button-large' %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
